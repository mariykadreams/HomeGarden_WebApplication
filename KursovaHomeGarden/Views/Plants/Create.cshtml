@model KursovaHomeGarden.Models.Plant.Plant



<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Plant</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="name" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="description"></textarea>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="price" type="number" step="0.01" />
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="category_id" asp-items="ViewBag.Categories">
                        <option value="" disabled selected>---</option>
                    </select>
                    <span asp-validation-for="category_id" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Care Level</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="care_level_id" asp-items="ViewBag.CareLevels">
                        <option value="" disabled selected>---</option>
                    </select>
                    <span asp-validation-for="care_level_id" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="img" type="file" />
                    <span asp-validation-for="img" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Plants" asp-action="Index">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
