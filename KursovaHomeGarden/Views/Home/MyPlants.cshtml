@model List<KursovaHomeGarden.Models.UserPlant>

<div class="container py-5">
    <h1 class="text-center mb-5">My Plants Collection</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>Your plant collection is empty!</h4>
            <p class="mb-0">Start adding plants to your collection from our <a href="@Url.Action("Index", "Home")">catalog</a>.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var userPlant in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(userPlant.Plant.img))
                        {
                            <img src="/images/plants/@userPlant.Plant.img" class="card-img-top" alt="@userPlant.Plant.name"
                                 style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@userPlant.Plant.name</h5>
                            <p class="card-text text-muted">
                                <small>Added to collection: @userPlant.purchase_date.ToString("MMMM dd, yyyy")</small>
                            </p>
                            <p class="card-text">@(userPlant.Plant.description?.Length > 100 ? userPlant.Plant.description.Substring(0, 100) + "..." : userPlant.Plant.description)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">@userPlant.Plant.Category?.category_name</span>
                                <a href="@Url.Action("Details", "Home", new { id = userPlant.Plant.plant_id })"
                                   class="btn btn-outline-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>