@model IEnumerable<dynamic>

<div class="mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Care Schedule Results</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Action Type</th>
                            <th>Interval (days)</th>
                            <th>Required Actions</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-semibold">@item.ActionType</span>
                                    </td>
                                    <td>@item.Interval</td>
                                    <td>
                                        <span class="badge bg-info">@item.RequiredActions</span>
                                    </td>
                                    <td>
                                        @if (string.IsNullOrEmpty(item.Notes))
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                        else
                                        {
                                            @item.Notes
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">
                                    <p class="text-muted mb-0">No care actions found for the selected date range.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted">
            <small>* Required Actions shows the number of times each care action needs to be performed during the selected period.</small>
        </div>
    </div>
</div>