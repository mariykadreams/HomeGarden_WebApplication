<div class="mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Action Type Statistics</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Action Type</th>
                            <th>Plant Name</th>
                            <th>Action Interval</th>
                            <th>Action Count</th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var stat in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-semibold">@stat.ActionType</span>
                                    </td>
                                    <td>
                                        <span class="fw-normal">@stat.PlantName</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning">@stat.ActionInterval</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">@stat.ActionCount</span>
                                    </td>
                                </tr>
                            }
                        
                       
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted">
            <small>* Find the most popular plants with details by acrion type and how many users chose them.</small>
        </div>
    </div>
</div>

