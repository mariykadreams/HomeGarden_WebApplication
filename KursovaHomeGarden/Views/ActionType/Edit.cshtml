@* Path: Views/ActionType/Edit.cshtml *@
@model KursovaHomeGarden.Models.ActionType

@{
    ViewData["Title"] = "Edit Action Type";
}

<h1>Edit Action Type</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="action_type_id" />
            <div class="form-group">
                <label asp-for="type_name" class="control-label">Type Name</label>
                <input asp-for="type_name" class="form-control" />
                <span asp-validation-for="type_name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
