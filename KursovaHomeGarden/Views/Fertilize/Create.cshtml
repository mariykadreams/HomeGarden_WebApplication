@model KursovaHomeGarden.Models.Fertilize

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Create New Fertilizer</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-3">
                <label asp-for="type_name" class="col-sm-4 col-form-label">Type Name</label>
                <div class="col-sm-8">
                    <input asp-for="type_name" class="form-control" placeholder="Enter fertilizer type name">
                    <span asp-validation-for="type_name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="units" class="col-sm-4 col-form-label">Units</label>
                <div class="col-sm-8">
                    <input asp-for="units" class="form-control" placeholder="Enter units">
                    <span asp-validation-for="units" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="note" class="col-sm-4 col-form-label">Note</label>
                <div class="col-sm-8">
                    <textarea asp-for="note" class="form-control" placeholder="Enter note (optional)"></textarea>
                    <span asp-validation-for="note" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Fertilize" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('form').submit(function (e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    return false;
                }
                return true;
            });
        });
    </script>
}